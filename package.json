{
  "name": "DAAPIService",
  "version": "0.1.0",
  "description": "Node.js on Docker",
  "author": "Ruhao Xia <1994ep@gmail.com>",
  "main": "server.js",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "start": "NODE_PATH=./build node build/index.js",
